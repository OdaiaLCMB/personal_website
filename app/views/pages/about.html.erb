<div class="banner">
  <div class="banner-content-about">
    <div class="hidden-xs hidden-sm">
      <div id="bg-paint">
        <% if I18n.locale == :en %>
          <div class="title-about title-about-en"></div>
        <% elsif I18n.locale == :fr %>
          <div class="title-about title-about-fr"></div>
        <% end %>
      </div>
    </div>
    <div class="margin-top-about">
      <div class="container">
        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-2 col-md-6 col-md-offset-6 col-lg-6 col-lg-offset-6">
            <div class="border-left">
              <p class="presentation"> <%= t("about.introduction") %>
              <br><br>
              <%= t("about.fin") %></p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-10 col-sm-offset-2 col-md-6 col-md-offset-6 col-lg-6 col-lg-offset-6">
            <div id="card-about">
              <!-- web card -->
              <div id="active" class="card-about">
                <div class="card-category-about">
                  <h2 class="space-letter-xs border-left bolder">Web</h2>
                </div>
                <div class="card-description-about text-left">
                  <p class="bolder">
                    <%= t('about.web.one') %>
                  </p>
                  <p>
                    <%= t('about.web.two') %>
                    <br>
                    <%= t('about.web.three') %>
                    <%= t('about.web.four') %>
                    <br>
                    <%= t('about.web.five') %>
                  </p>
                </div>
                <img src="http://res.cloudinary.com/dkt6x6yfo/image/upload/v1508419187/odaialacombe_pictogrammes_HD-05_emlytj.png" alt="web pictogramme" class="card-pict card-web">
                <div id="arrow1" class="card-arrow arrow-right">
                  <i class="fa fa-angle-right" aria-hidden="true"></i>
                </div>
              </div>
              <!-- end -->
              <!-- mobile card -->
              <div id="active2" class="card-about hidden">
                <div class="card-category-about">
                  <h2 class="space-letter-xs border-left bolder">Production</h2>
                </div>
                <div class="card-description-about text-left">
                  <p>
                    <%= t('about.mobile.one') %>
                    <br>
                    <%= t('about.mobile.two') %>
                    <br>
                    <%= t('about.mobile.three') %>
                    <br>
                    <%= t('about.mobile.four') %>
                  </p>
                </div>
                <div class="card-mobile card-pict">
                  <i class="fa fa-cogs" aria-hidden="true"></i>
                </div>
                <div id="arrow3" class="card-arrow arrow-right">
                  <i class="fa fa-angle-right" aria-hidden="true"></i>
                </div>
                <div id="arrow2" class="card-arrow arrow-left">
                  <i class="fa fa-angle-left" aria-hidden="true"></i>
                </div>
              </div>
              <!-- end -->
              <!-- design card -->
              <div id="active3" class="card-about hidden">
                <div class="card-category-about">
                  <h2 class="space-letter-xs border-left bolder">Graphisme</h2>
                </div>
                <div class="card-description-about text-left">
                  <p>
                    <%= t('about.design.one') %>
                    <br>
                    <%= t('about.design.two') %>
                    <%= t('about.design.three') %>
                    <br><br>
                    <%= t('about.design.four') %>
                  </p>
                </div>
                <img src="http://res.cloudinary.com/dkt6x6yfo/image/upload/v1508419210/odaialacombe_pictogrammes_HD-07_vuxp1a.png" alt="design pictogramme" class="card-pict card-design">
                <div id="arrow4" class="card-arrow arrow-left">
                  <i class="fa fa-angle-left" aria-hidden="true"></i>
                </div>
              </div>
              <!-- end -->
            </div>
          </div>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
